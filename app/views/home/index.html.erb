<div class="guitar-cover-container">
  <%= image_tag("guitar-cover.jpg", class: "guitar-cover") %>
</div>
<div class="user-info">
<% if current_user.present? %>
<ul class="product-list">
<h1> Your Recent Purchases </h1>
<% @products.each do |product| %>
  <div class="products">
  <li>
    <div class="product"><div class="product-image"><%= image_tag product.image, style: 'height:200px;width:150px;' %></div><div class="product-title"><%= product.name %></div><div class="price"> <%= product.price %>$ </div><div class="add-cart-button"> <%= link_to "", product_path(id: product.id), class: "fa fa-shopping-cart cart-icon" %></div>
    <div></div>
</li>
    </div>
  <% end %>
</ul>
<% end %>
</div>